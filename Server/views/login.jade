extends layout-home

block head
	

block content
	p Mit Ihrem Konto anmelden.
	#login.login
		form(name='login', action='/login', method='post')
			//label(for='email', id='label_email') E-Mail
			input(type='text,required', id='email', name='email', value='',spellcheck='false', placeholder='jemand@example.com')
			//label(for='password') Passwort
			input(type='password,required', id='password', name='password', value='', placeholder='Kennwort')
			input(type='checkbox', name='persistent', id='persistent', value='true', checked='true')
			label(for='persistent') Angemeldet bleiben
			input(type='submit', value='Anmelden')
		p Noch nicht angemeldet? 
			a(href='register') Jetzt Registrieren!
		
		