doctype html
html(lang='de')
	head
		include inc/head
		link(type="text/css"
			rel="stylesheet"
			href="/css/dashboard.css"
			media="all")
	body
		header
			nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
				div.container-fluid
					div.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='#') Wg-Planner
					div.collapse.navbar-collapse
						ul.nav.navbar-nav#link-breadcrumb
							li#link-dashboard(class= breadcrumbs.length === 0 ? 'active' : '')
								a(href='/dashboard') Dashboard
							each crumb, crumbIndex in breadcrumbs
								p.navbar-text.breadcrumbs-arrow &#8594;
								li(class= crumbIndex === breadcrumbs.length-1 ? 'active' : '')
									a(href=crumb.url)= crumb.text
						form.navbar-form.navbar-right(role='logout', name='logout', method='post', action='/logout')
							input(type='hidden', name='_csrf', value=_csrf)
							div.form-group
								input.btn.btn-primary(type='submit', value='Logout')
						div.btn-group.navbar-right(role='group')
							a.btn.btn-default.navbar-btn(href='/notifications', title='Benachrichtungen')
								span.glyphicon.glyphicon-bell
							a.btn.btn-default.navbar-btn(href='/invitation' , title='Einladungen')
								span.glyphicon.glyphicon-heart
							a.btn.btn-default.navbar-btn(href='/settings' , title='Einstellungen')
								span.glyphicon.glyphicon-wrench
			p= personName
		div.container-fluid
			div.row
				div.col-sm-12.col-md-12.main
					block content
		include inc/foot
