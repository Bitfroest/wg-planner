doctype html
html(lang='de')
	include inc/head
	link(type="text/css"
		rel="stylesheet"
		href="../css/dashboard.css"
		media="all")
	body
		header
			nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
				div.container-fluid
					div.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='#') Wg-Planner
					div.collapse.navbar-collapse
						ul.nav.navbar-nav
							li
								a(href='/dashboard') Dashboard
							each crumb in breadcrumbs
								p.navbar-text.breadcrumbs-arrow &#8594;
								li
									a(href=crumb.url)= crumb.text
						form.navbar-form.navbar-right(role='logout', name='logout', method='post', action='/logout')
							input(type='hidden', name='_csrf', value=_csrf)
							div.form-group
								input.btn.btn-primary(type='submit', value='Logout')
								
			p= personName
		div.container-fluid
			div.row
				div.col-sm-3.col-md-2.sidebar
				div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
					block content
					
		//jQuery (necessary for Bootstrap's JavaScript plugins)
		script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
		//local jQuery just for testing
		script(src='/js/jquery.js')
		//Include all compiled plugins (below), or include individual files as needed
		script(src='/js/bootstrap.min.js')