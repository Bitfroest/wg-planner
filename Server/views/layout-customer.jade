							- var breadLinks = new Array()
							- var i = 0
							- breadLinks[0] = "dashboard"
							each crumb in breadcrumbs
								- i = i + 1
								- breadLinks[i] = crumb.url.split("/")[1]
								p.navbar-text.breadcrumbs-arrow &#8594;
								li(id='link-'+crumb.url.split("/")[1], class='')
									a(href=crumb.url)= crumb.text
							script(type='application/javascript')
								| document.getElementById("link-
								=breadLinks[i]
								|").className="active";
						form.navbar-form.navbar-right(role='logout', name='logout', method='post', action='/logout')
							input(type='hidden', name='_csrf', value=_csrf)
							div.form-group
								input.btn.btn-primary(type='submit', value='Logout')
								
