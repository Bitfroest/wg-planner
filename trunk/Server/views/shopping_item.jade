extends layout-customer

block head

block content
	h1.page-header= title
	
	h2.sub-header Einkaufsartikel
	
	form(method='post', action='/shopping_item/update')
		input(type='hidden', name='_csrf', value=_csrf)
		input(type='hidden', name='id', value=item.id)
		table.table.table-striped
			tr
				td Name
				td
					input.form-control(type='text', name='name', value=item.name)
			tr
				td Besitzer
				td
					select(name='owner')
						each member in members
							option(value=member.id, selected=(member.id === item.owner))= member.name
			tr
				td Preis
				td
					div.input-group
						input.form-control(type='text', name='price', value=item.price/100)
						span.input-group-addon €
		input.disabled.btn.btn-primary(type='submit', value='Ändern (not implemented)', disabled)